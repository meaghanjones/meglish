<% provide(:title, "Course List") %>
<div class="hero-bg">
  <div class="hero-content">
    <h1>Learn English with Meglish<h1>
  </div>
</div>

<div class ="container room-for-header">
  <h1>Courses</h1>
  <ul>
    <% @courses.each do |course| %>
      <li><%= link_to course.name, course_path(course) %></li>
      <li><%= image_tag course.photo.url(:medium) %>
    <% end %>
  </ul>
<%= link_to "New Course", new_course_path %>
</div>
