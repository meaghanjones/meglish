<% provide(:title, "Course List") %>
<div class="hero-bg">
  <div class="hero-content">
    <h1>Learn English with Meglish</h1>
  </div>
</div>
<div class="content">
  <div class ="container room-for-header">
    <h1 class="center-title title">Available English Courses</h1>


    <div class="row">
      <% @courses.each do |course| %>
      <div class="col-sm-6">
        <div class="card card-block">
          <%= image_tag course.photo.url(:medium), class: "card-img-top" %>
          <h2 class="card-title text-center"><%= course.name %></h2>
          <p class="card-text"><%= course.description%></p>
          <button class="btn btn-primary center-button"><%= link_to "Start Learning!", course_path(course) %></button>
        </div>
      </div>

    <% end %>
    </div>
    <% if can? :create, @course %>
      <p>  <%= link_to "New Course", new_course_path %></p>
    <% end %>

  </div>
</div>
