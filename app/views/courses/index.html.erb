<% provide(:title, "Course List") %>
<div class="hero-bg">
  <div class="hero-content">
    <h1>Learn English with Meglish<h1>
  </div>
</div>

<div class ="container room-for-header">
  <h1>Courses</h1>

  <div class="card-deck-wrapper">
    <div class="card-deck">
    <% @courses.each do |course| %>
      <div class="card">
        <h4 class="card-title text-center"><%= link_to course.name, course_path(course) %><h4>
        <span class="card-img-top" src="..." alt="Card image cap"><%= image_tag course.photo.url(:medium) %><span>
        <div class="card-block">
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
      </div>

    <% end %>
    </div>
  </div>
<%= link_to "New Course", new_course_path %>
</div>
