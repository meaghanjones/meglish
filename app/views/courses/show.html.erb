<% provide(:title, "Course Lessons") %>
<div class = "container content">
  <div class="row">
    <div class="col-sm-6">
      <h1><%= @course.name %></h1>
      <p> <%= @course.description %></p>
      <p> Level: <%= @course.level.name %></p>
      <p> Age: <%= @course.age.age_name %></p>
    </div>
  </div>

  <div class ="row">
    <div class="col-md-6">
      <%= image_tag @course.photo.url(:medium), class: "card-image" %>
    </div>
    <div class="col-md-6">
      <h4>Lessons</h4>
      <% if @course.lessons.each do |lesson| %>
        <p> <%= link_to lesson.name, course_lesson_path(@course, lesson) %> </p>
      <% end %>
      <%else%>
        <p> There are no lessons yet!</p>
      <%end%>
      <hr>
      <% if can? :create, @course %>
        <p><%= link_to "New Lesson", new_course_lesson_path(@course) %></p>
        <p><%= link_to "Edit Course", edit_course_path(@course) %> </p>
        <p><%= link_to "Delete Course", course_path(@course),
                               :data => {:confirm => "Are you sure?",
                                          :method => "delete"} %></p>
      <% end %>
    </div>
  </div>
  <p><%= link_to "Return to Course List", courses_path %></p>
</div>
