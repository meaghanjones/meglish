<%= render('layouts/errors', :object => @lesson) %>

<%= form_for [@course, @lesson] do |f| %>
  <%=f.label :name %>
  <%=f.text_field :name, class: "form-control" %>

  <%=f.label :description %>
  <%=f.text_field :description, class: "form-control" %>

  <%=f.label :video %>
  <%=f.text_field :video, class: "form-control" %>

  <%=f.label :skills %>
  <%=f.text_field :skills, class: "form-control" %>

  <%=f.label :time %>
  <%=f.text_field :time, class: "form-control" %>

  <p><%= f.submit class: "btn btn-primary" %></p>

<% end %>
